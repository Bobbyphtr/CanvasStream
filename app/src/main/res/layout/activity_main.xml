<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrawActivity"
    android:id="@+id/relativeLayout">

    <com.xenoire.canvasstream.MyCanvasView
        android:id="@+id/myCanvasView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.wangjie.rapidfloatingactionbutton.rfabgroup.RapidFloatingActionButtonGroup
        android:id="@+id/rfab_group_sample_rfabg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        >

        <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton
            xmlns:rfab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rfab_group_sample_rfab_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rfab:rfab_size="normal"
            rfab:rfab_drawable="@drawable/rfab__drawable_rfab_default"
            rfab:rfab_color_normal="#d84315"
            rfab:rfab_color_pressed="#bf360c"
            rfab:rfab_shadow_radius="7dp"
            rfab:rfab_shadow_color="#999999"
            rfab:rfab_shadow_dx="0dp"
            rfab:rfab_shadow_dy="5dp"
            rfab:rfab_identification_code="a"
            />

        <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton
            xmlns:rfab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rfab_group_sample_rfab_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rfab:rfab_size="normal"
            rfab:rfab_color_normal="#283593"
            rfab:rfab_color_pressed="#1a237e"
            rfab:rfab_shadow_radius="7dp"
            rfab:rfab_shadow_color="#999999"
            rfab:rfab_shadow_dx="0dp"
            rfab:rfab_shadow_dy="5dp"
            rfab:rfab_identification_code="b"
            />

        <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton
            xmlns:rfab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rfab_group_sample_rfab_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rfab:rfab_size="normal"
            rfab:rfab_color_normal="#056f00"
            rfab:rfab_color_pressed="#0d5302"
            rfab:rfab_shadow_radius="7dp"
            rfab:rfab_shadow_color="#999999"
            rfab:rfab_shadow_dx="0dp"
            rfab:rfab_shadow_dy="5dp"
            rfab:rfab_identification_code="c"
            >

        </com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton>
    </com.wangjie.rapidfloatingactionbutton.rfabgroup.RapidFloatingActionButtonGroup>

</android.support.constraint.ConstraintLayout>